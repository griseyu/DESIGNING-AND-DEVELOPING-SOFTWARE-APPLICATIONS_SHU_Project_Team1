<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script language="javascript" src="../survey.js"></script>
    <script language="javascript" src="../main.js"></script>
    <link rel="stylesheet" href="../CSS/styles.css" />

    <title>HairCare</title>
  </head>
  <header><h1>Hair Care</h1></header>
  <body>
    <%- include('partials/navBar.ejs') %>
    <div class=white-container>
    <form
      id="hairCareIngredients"
      action="/hairCareResults"
      method="GET"
      required="required"
    >
      <label id="questionnaire-title">Select which ingredients you don't want:</label><br />
      <input
        type="checkbox"
        name="hairIngredients"
        value="Gluten-free"
        oninvalid="this.setCustomValidity('Please make a selection')"
        onchange="this.setCustomValidity('')"
      />Gluten-free<br />
      <input
        type="checkbox"
        name="hairIngredients"
        value="Nut-free"
      />Nut-free<br />
      <input type="checkbox" name="hairIngredients" value="Vegan" />Vegan<br />
      <input
        type="checkbox"
        name="hairIngredients"
        value="Cruelty-free"
      />Cruelty-free<br />
      <input
        type="checkbox"
        name="hairIngredients"
        value="Parabens-free"
      />Parabens-free<br />
      <input
        type="checkbox"
        name="hairIngredients"
        value="SLS-free"
      />SLS-free<br />
      <input
        type="checkbox"
        name="hairIngredients"
        value="Silicon-free"
      />Silicon-free<br />
      <p>
        <button type="submit" onclick="valthisform()">Show Products</button>
      </p>
      <!-- <input type="submit" value="Let's Go!" onclick="letsGo()" /> -->
    </form>

    <script>
      function valthisform() {
        var checkboxes = document.getElementsByName("hairIngredients");
        var okay = false;
        for (var i = 0; i < checkboxes.length; i++) {
          if (checkboxes[i].checked === true) {
            okay = true;
          }
        }

        if (okay === true) {
          for (var i = 0; i < checkboxes.length; i++) {
            checkboxes[i].required = false;
          }
        } else {
          for (var i = 0; i < checkboxes.length; i++) {
            checkboxes[i].required = true;
          }
        }
      }
    </script>
    </div>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
