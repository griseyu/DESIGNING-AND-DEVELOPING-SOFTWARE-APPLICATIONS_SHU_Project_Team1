<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script language="javascript" src="../survey.js"></script>
    <script language="javascript" src="../main.js"></script>
    <link rel="stylesheet" href="../CSS/styles.css" />

    <title>HairCare</title>
  </head>
  <header><h1>Hair Care</h1></header>
  <body>
    <%- include('partials/navBar.ejs') %>
    <div class="white-container">
      <form
        id="hairCareIngredients"
        action="/hairCareResults"
        method="GET"
        required="required"
      >
        <label id="questionnaire-title"
          >Select which ingredients you don't want:</label
        ><br />
        <div class="left">
          <input
            class="tickbox"
            id="c1"
            type="checkbox"
            name="hairIngredients"
            value="Gluten-free"
          /><label for="c1">Gluten-free</label><br />
          <input
            id="c2"
            type="checkbox"
            name="hairIngredients"
            value="Nut-free"
          /><label for="c2">Nut-free</label><br />
          <input
            id="c3"
            type="checkbox"
            name="hairIngredients"
            value="Vegan"
          /><label for="c3">Vegan</label><br />
          <input
            id="c4"
            type="checkbox"
            name="hairIngredients"
            value="Cruelty-free"
          /><label for="c4">Cruelty-free</label><br />
          <input
            id="c5"
            type="checkbox"
            name="hairIngredients"
            value="Parabens-free"
          /><label for="c5">Parabens-free</label><br />
          <input
            id="c6"
            type="checkbox"
            name="hairIngredients"
            value="SLS-free"
          /><label for="c6">SLS-free</label><br />
          <input
            id="c7"
            type="checkbox"
            name="hairIngredients"
            value="Silicon-free"
          /><label for="c7"></label>Silicon-free<br />
        </div>
        <p>
          <button type="submit" onclick="valthisform()">Show Products</button>
        </p>
      </form>

      <script>
        function valthisform() {
          var checkboxes = document.getElementsByName("hairIngredients");
          var okay = false;
          for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked === true) {
              okay = true;
            }
          }

          if (okay === true) {
            for (var i = 0; i < checkboxes.length; i++) {
              checkboxes[i].required = false;
            }
          } else {
            for (var i = 0; i < checkboxes.length; i++) {
              checkboxes[i].required = true;
            }
          }
        }
      </script>
    </div>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
