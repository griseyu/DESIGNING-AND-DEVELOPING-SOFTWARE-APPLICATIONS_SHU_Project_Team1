    <title>Make Up</title>
  </head>
  <header><h1>Make Up</h1></header>
    <body>
      <script language="javascript" src="../survey.js"></script>

      <%- include('partials/navBar.ejs') %>

      <div class=white-container> 
      <form id="makeupIngredients" action="/makeUpResults" method="GET">
        <label id="questionnaire-title">Select which ingredients you don't want:</label><br />

        <input type="checkbox" name="makeUpIngredients" value="Vegan" oninvalid="this.setCustomValidity('Please make a selection')" onchange="this.setCustomValidity('')"/>Vegan<br />
        <input type="checkbox" name="makeUpIngredients" value="Nut-free" />Nut-free<br />
        <input type="checkbox" name="makeUpIngredients" value="Gluten-free" />Gluten-free<br />
        <input type="checkbox" name="makeUpIngredients" value="Cruelty-free" />Cruelty-free<br />
        <input type="checkbox" name="makeUpIngredients" value="Silicon-free" />Silicon-free<br />
        <input type="checkbox" name="makeUpIngredients" value="Animal-tested" />Animal-tested<br />

        <p>
          <button type="submit" onclick="valthisform()">Show Products</button>
        </p>
        <!-- <input type="submit" value="Let's Go!" onclick="letsGo()" /> -->
      </form>

      <script>
        function valthisform(){
        var checkboxes=document.getElementsByName("makeUpIngredients");
        var okay=false;
        for(var i=0; i<checkboxes.length; i++){
            if(checkboxes[i].checked===true){
                okay=true;
            }
            } 
    
            if (okay===true) {
              for(var i=0; i<checkboxes.length; i++) {
              checkboxes[i].required=false;
            }
          }
            else {
              for(var i=0; i<checkboxes.length; i++) {
                  checkboxes[i].required=true; 
            }
          }
        }
        </script>
    <div class="w3-container">
      <p><i class="fa fa-spinner w3-spin" style="font-size: 64px"></i></p>
    </div>
      </div>

      <br />
      <button onclick="move()">Prescribe Me</button>
      <div id="myProgress">
        <div id="myBar"></div>

      <!-- Progress bar (blanked out currently) / thinking circles -->

      <%- include('partials/footer.ejs') %>
      <script src="../survey.js"></script>
      <script src="../main.js"></script>
    </body>
</html>
